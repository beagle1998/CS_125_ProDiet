<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/assessment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Assessment"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/assessment_info"
        android:layout_below="@+id/assessment_title"
        android:layout_centerHorizontal="true"
        android:layout_width="395dp"
        android:layout_height="138dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <view
        android:id="@+id/assessment_pieChart"
        android:layout_below="@+id/assessment_info"
        android:layout_centerHorizontal="true"
        class="com.github.mikephil.charting.charts.PieChart"
        android:layout_width="410dp"
        android:layout_height="223dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/assessment_BMI"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/assessment_pieChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="BMI"
        android:textColor="@color/colorText"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/assessment_BMIStatus"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/assessment_BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <view
        android:id="@+id/assessment_BMIChart"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/assessment_BMIStatus"
        class="com.github.mikephil.charting.charts.HorizontalBarChart"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>